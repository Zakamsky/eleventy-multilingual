---
pageTitle: Blog
permalink: "/{{ locale }}/blog/index.html"
translationKey: "blogpage"
---

{% extends "layouts/base.njk" %}

{% block content %}

  <h2 class="title">Archive du blog</h2>
  {% for post in collections.posts_fr %}
    {% if loop.first %}<ul>{% endif %}
      <li>
        <article class="post u-flex u-justify-between">
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <time datetime="{{ post.date | date('Y-MM-DD') }}">{{ post.date | date("DD MMMM[,] Y", locale) }}</time>
        </article>

      </li>

    {% if loop.last %}</ul>{% endif %}
  {% endfor %}

{% endblock %}
